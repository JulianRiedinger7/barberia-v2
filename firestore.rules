rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated (Admin)
    function isAdmin() {
      return request.auth != null;
    }

    // Reglas para Servicios y Staff (PÃºblico puede ver, Solo Admin edita)
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /members/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reglas para Turnos (Appointments)
    match /appointments/{appointmentId} {
      // Cualquiera puede leer para ver disponibilidad (Idealmente filtrar campos sensibles, pero Firestore no lo permite nativamente en list)
      allow read: if true;
      
      // Public create permitida (Reservas)
      allow create: if true;

      // Solo admin puede modificar o borrar
      allow update, delete: if isAdmin();
    }

    // Reglas para Clientes (Solo Admin)
    match /clients/{clientId} {
      allow read, write: if isAdmin();
    }

    // Regla por defecto para otras colecciones: Bloquear todo
    match /{document=**} {
      allow read, write: if false;
    }
  }
}